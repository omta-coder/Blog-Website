<%- include("./partials/header")%>
<%- include("./partials/nav")%>
<div class="w-[90%] rounded mx-auto bg-slate-500 mt-10 text-white p-10">
    <h1 class="text-2xl mb-4">Blog Description</h1>
    <% user.blogs.forEach((elem)=>{%>
        <div class="h-1/4 w-2/5 flex items-center gap-5">
            <img class="w-1/2  rounded " src="<%= elem.url%>" alt="">
            <div >
                <h1 class="text-xl font-bold text-center"><%= elem.title%></h1>
                <p class="text-lg text-center"><%= elem.description%></p>
                <a class="text-blue-700" href="/users/profile">Profile</a>
            </div>
        </div>
        
    <%})%>
</div>
<%- include("./partials/footer")%>
